<Window x:Class="wineigentuemerText"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bgm"
        mc:Ignorable="d" Background="LightGray"
        Title="wineigentuemerText" Height="450" Width="800">
    <DockPanel >
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top">
            <StackPanel  Orientation="Horizontal">
                <Button Name="btnabbruch" Click="btnabbruch_Click" Width="150" Margin="10">Abbruch</Button>
                <Button Name="btnclip" Click="btnclip_Click"  Width="150" Margin="10">zur Zwischenablage</Button>
            </StackPanel>
            <TextBox Name="tb" TextWrapping="Wrap" Background="White"
                       HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"/>
        </StackPanel>
    </DockPanel>
</Window>
